{
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": false
  },
  "exclude": [
    "node_modules",
    "**/tests/**.ts"
  ],
  "references": [
    {
      "path": "packages/aws"
    },
    {
      "path": "packages/normalize"
    },
    {
      "path": "packages/utils"
    }
  ]
}
