    "@serverless-normalize/aws": "file:packages/aws"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "coveralls": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  }
}
